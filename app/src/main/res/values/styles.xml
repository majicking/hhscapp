<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="djk_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/djk_textcolor444</item>
    </style>
    <!--占位-->
    <style name="linearlayout_zw">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/dp_0</item>
        <item name="android:layout_width">@dimen/dp_0</item>
    </style>
    <!-- 分隔线 -->
    <style name="djk_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/djk_linecolor</item>
    </style>
    <!-- 分隔线 -->
    <style name="djk_line_h">
        <item name="android:layout_width">@dimen/dp_1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/djk_linecolor</item>
    </style>
    <!-- 分隔线 -->
    <style name="djk_line_black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/black</item>
    </style>
    <!-- 分隔线 -->
    <style name="djk_line_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>
    <!-- 分隔线 -->
    <style name="djk_line_big">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_10</item>
        <item name="android:background">@color/djk_linecolor</item>
    </style>

    <style name="icon_48">
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:layout_width">@dimen/dp_48</item>
        <item name="android:layout_height">@dimen/dp_48</item>

    </style>

    <style name="warp">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_warp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="warp_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="left15" parent="warp">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
    </style>

    <style name="right15" parent="warp">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
    </style>

    <style name="textleft15" parent="left15">
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="textright15" parent="right15">
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="RLayout_48">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_48</item>
    </style>

    <style name="LLayout_48_v">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_48</item>
    </style>

    <style name="LLayout_50_v">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
    </style>

    <style name="LLayout_48_h">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_48</item>
    </style>

    <style name="LLayout_40_h">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
    </style>

    <style name="bg_white_magin_left_top_right_5">
        <item name="android:layout_marginRight">@dimen/dp_5</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:background">@drawable/bg_circle_white_5</item>
    </style>

    <style name="LLayout_50_h">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
    </style>

    <style name="LLayout_55_h">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_55</item>
    </style>

    <style name="edittext">
        <item name="android:background">@drawable/djk_bg_border_bottom</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/djk_edithitcolor</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:background">@drawable/djk_btn_bg</item>
        <item name="android:textColor">@drawable/djk_btn_text_color</item>
    </style>

    <style name="layout_weight_h">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="layout_weight_v">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--我的页面图片-->
    <style name="mine_img">
        <item name="android:layout_width">@dimen/dp_23</item>
        <item name="android:layout_height">@dimen/dp_23</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <!--订单图片-->
    <style name="mine_text" parent="warp">
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <!--首页标题-->
    <style name="home_title" parent="warp">
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="btnNomll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_25</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:paddingRight">@dimen/dp_15</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:background">@drawable/djk_btn_bg</item>
        <item name="android:textColor">@drawable/djk_btn_text_color</item>
    </style>


    <!--显示订单数量-->
    <style name="mine_order_number">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/mine_order_number</item>
        <item name="android:maxHeight">@dimen/dp_14</item>
        <item name="android:maxWidth">@dimen/dp_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dp_10</item>

    </style>

    <style name="specBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_20</item>
        <item name="android:minWidth">@dimen/dp_50</item>
        <item name="android:background">@drawable/btn_select</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:paddingRight">@dimen/dp_5</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:textColor">@drawable/djk_btn_text_color</item>
    </style>

    <style name="commentBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_25</item>
        <item name="android:maxWidth">@dimen/dp_100</item>
        <item name="android:minWidth">@dimen/dp_50</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/btn_bg_red_transl</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:paddingRight">@dimen/dp_8</item>
        <item name="android:paddingLeft">@dimen/dp_8</item>
        <item name="android:textColor">@drawable/text_color_white_red</item>
    </style>

    <!-- my loading dialog -->
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--check-->
    <style name="checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <!--对话框样式-->
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--对话框样式-->
    <style name="myDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- dialog样式 -->
    <style name="dialog_custom" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>    <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">true</item> <!--是否半透明-->
        <item name="android:windowNoTitle">false</item>       <!--是否有标题-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--窗口背景色透明-->
        <item name="android:backgroundDimEnabled">true</item> <!--背景是否模糊显示-->
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="popuStyle">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>
