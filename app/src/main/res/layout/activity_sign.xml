<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.fragment.home.SignActivity">

    <include layout="@layout/common_toolbar" />

    <View style="@style/djk_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@color/appColor"
        android:orientation="vertical">

        <LinearLayout style="@style/LLayout_55_h">

            <TextView
                android:id="@+id/text1"
                style="@style/djk_text"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/bg_white_transl"
                android:gravity="center"
                android:maxLines="1"
                android:minHeight="@dimen/dp_22"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:text="我的积分:0"
                android:textColor="@color/white" />

            <View style="@style/linearlayout_zw" />

            <TextView
                android:id="@+id/text2"
                style="@style/djk_text"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bg_white_transl"
                android:gravity="center"
                android:maxLines="1"
                android:minHeight="@dimen/dp_22"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:text="活动说明"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            style="@style/match"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/view1"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:background="@mipmap/sign_btn"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text3"
                    style="@style/layout_weight_v"
                    android:gravity="bottom|center"
                    android:paddingBottom="@dimen/dp_2"
                    android:text="签到"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/dp_18"
                    android:textStyle="bold" />

                <View
                    style="@style/djk_line"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10" />


                <TextView
                    android:id="@+id/text4"
                    style="@style/layout_weight_v"
                    android:gravity="top|center"
                    android:paddingTop="@dimen/dp_5"
                    android:text="+5 积分"
                    android:textColor="@color/appColor" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/recycleview" />
</LinearLayout>