<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/djk_line_big" />

    <LinearLayout style="@style/LLayout_48_h">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_15" />

        <TextView
            android:id="@+id/name"
            style="@style/left15" />

        <View style="@style/linearlayout_zw" />

        <TextView
            android:id="@+id/time"
            style="@style/right15" />
    </LinearLayout>

    <View style="@style/djk_line" />

    <LinearLayout
        android:id="@+id/ratinglayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:text="" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/againView"
        style="@style/match_warp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            style="@style/LLayout_40_h"
            android:orientation="horizontal">

            <TextView
                style="@style/djk_text"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="追加评论" />

            <View style="@style/linearlayout_zw" />

            <TextView
                android:id="@+id/timeagain"
                style="@style/djk_text"
                android:layout_marginRight="@dimen/dp_15" />
        </LinearLayout>


        <TextView
            android:id="@+id/contentagain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"></android.support.v7.widget.RecyclerView>

    </LinearLayout>


</LinearLayout>