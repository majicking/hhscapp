<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_white_magin_left_top_right_5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dp_5">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_3"
            style="@style/match_warp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text1"
                style="@style/warp"
                android:minWidth="@dimen/dp_100"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/text2"
                style="@style/textleft15"
                android:textSize="@dimen/sp_12" />

            <View style="@style/linearlayout_zw" />


        </LinearLayout>


        <TextView
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:id="@+id/defaultaddress"
            style="@style/match_warp"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/checkbox"
                android:button="@mipmap/img_null" />

            <TextView
                android:id="@+id/defaulttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设为默认"
                android:textSize="@dimen/dp_12" />

            <View style="@style/linearlayout_zw" />

            <LinearLayout
                android:id="@+id/view_edit"
                style="@style/warp">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/icon_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_del"
                style="@style/warp">

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:src="@drawable/icon_del" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>