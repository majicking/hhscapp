<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smartrefreshlayout"
    style="@style/match"
    android:orientation="vertical">

    <RelativeLayout style="@style/match">

        <com.guohanhealth.shop.custom.MyScrollView
            android:id="@+id/home_view_scrollview"
            style="@style/match"
            android:scrollbars="none">

            <LinearLayout
                style="@style/match"
                android:orientation="vertical">

                <RelativeLayout
                    style="@style/match_warp"
                    android:layout_height="320dp">

                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"></com.youth.banner.Banner>

                    <RelativeLayout
                        android:id="@+id/cardview_menu"
                        android:layout_width="match_parent"
                        android:layout_height="145dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/home_bg_color" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@color/djk_bgcolor" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@color/djk_bgcolor" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/bg_line"
                            android:gravity="center"
                            android:paddingBottom="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_3"
                            android:paddingRight="@dimen/dp_3"
                            android:paddingTop="@dimen/dp_5">

                            <com.guohanhealth.shop.custom.MyGridView
                                android:id="@+id/gridview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:numColumns="4"></com.guohanhealth.shop.custom.MyGridView>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <View style="@style/djk_line_big" />

                <LinearLayout
                    android:id="@+id/home_view_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>
        </com.guohanhealth.shop.custom.MyScrollView>

        <LinearLayout
            android:id="@+id/home_view_titleview"
            style="@style/LLayout_48_h"
            android:background="@color/translucent">

            <ImageView
                android:id="@+id/home_scanner"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/ic_scanner_white" />

            <LinearLayout
                android:id="@+id/home_view_search"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_recricle"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@drawable/ic_search_white" />

                <TextView
                    android:id="@+id/home_hot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_view_im"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_26"
                    android:src="@drawable/ic_message_white" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</com.scwang.smartrefresh.layout.SmartRefreshLayout>