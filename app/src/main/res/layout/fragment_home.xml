<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smartrefreshlayout"
    style="@style/match"
    android:layout_marginBottom="@dimen/dp_50"
    android:orientation="vertical">

    <ScrollView
        style="@style/match"
        android:scrollbars="none">

        <LinearLayout
            style="@style/match"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/match_warp"
                android:layout_height="@dimen/dp_180">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></com.youth.banner.Banner>

                <LinearLayout
                    style="@style/LLayout_48_h"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@color/translucent">

                    <LinearLayout
                        android:id="@+id/home_view_search"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_line_gray"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:src="@mipmap/nc_icon_search" />

                        <TextView
                            android:paddingLeft="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:textColor="@color/nc_text"
                            android:id="@+id/home_hot"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/home_scanner"
                            android:layout_width="@dimen/dp_26"
                            android:layout_height="@dimen/dp_26"
                            android:src="@mipmap/nc_icon_camera" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_view_im"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            android:src="@mipmap/nc_icon_im_white" />

                        <TextView
                            style="@style/warp"
                            android:text="消息"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

            <View style="@style/djk_line" />
            <com.majick.guohanhealth.view.NoScrollGridView
                android:id="@+id/gridview"
                android:numColumns="4"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:verticalSpacing="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.majick.guohanhealth.view.NoScrollGridView>
            <LinearLayout
                android:id="@+id/home_view_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>
    </ScrollView>

</com.scwang.smartrefresh.layout.SmartRefreshLayout>