<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/djk_bgcolor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:padding="@dimen/dp_5">

            <ImageView
                android:id="@+id/goodslist_item_list_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/goodslist_item_list_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="top"
                    android:maxLines="2"
                    android:textColor="@color/nc_text"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/goodslist_item_list_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:maxLines="1"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/goodslist_item_list_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="$ 0.00"
                        android:textColor="@color/appColor"
                        android:textSize="16dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/goodslist_item_list_grouppurchase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:background="@color/appColor"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:text="团购"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/goodslist_item_list_gift"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:background="@color/appColor"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:text="赠品"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <ImageView
                            android:id="@+id/goodslist_item_list_rating"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="5dp"
                            android:src="@mipmap/rating_rate" />

                        <View style="@style/linearlayout_zw" />

                        <TextView
                            android:id="@+id/goodslist_item_list_fcode"
                            style="@style/warp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_5"
                            android:background="@color/appColor"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="F"
                            android:textColor="@color/white"
                            android:textSize="10dp" />
                        <TextView
                            android:id="@+id/goodslist_item_list_virtual"
                            style="@style/warp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@color/appColor"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="虚拟"
                            android:textColor="@color/white"
                            android:textSize="10dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/goodslist_item_list_salenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="销量:0"
                    android:textColor="@color/nc_text"
                    android:textSize="12dp" />

                <View style="@style/linearlayout_zw" />

                <TextView
                    android:id="@+id/goodslist_item_list_storename"
                    style="@style/warp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:ellipsize="end"
                    android:maxWidth="@dimen/dp_150" />

                <TextView
                    android:id="@+id/goodslist_item_list_ownstore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@color/appColor"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="自营"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

            </LinearLayout>

            <TextView
                style="@style/djk_line"
                android:layout_alignParentBottom="true" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>