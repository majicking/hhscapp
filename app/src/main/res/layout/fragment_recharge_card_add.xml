<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.fragment.mine.property.rechargecardbalance.RechargeCardAddFragment">

    <android.support.v4.widget.NestedScrollView style="@style/match">

        <LinearLayout
            style="@style/match"
            android:orientation="vertical">

            <View style="@style/djk_line_big" />

            <LinearLayout
                style="@style/LLayout_48_h"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    style="@style/djk_text"
                    android:text="充值卡号：" />

                <EditText
                    android:id="@+id/idcard"
                    style="@style/layout_weight_h"
                    android:gravity="center_vertical"
                    android:hint="请输入充值卡号"
                    android:paddingLeft="@dimen/dp_15"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <View style="@style/djk_line" />

            <LinearLayout
                style="@style/LLayout_48_h"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    style="@style/djk_text"
                    android:text="验  证  码：" />

                <EditText
                    android:id="@+id/editcode"
                    style="@style/layout_weight_h"
                    android:inputType="text"
                    android:gravity="center_vertical"
                    android:hint="请输入四位验证码"
                    android:paddingLeft="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/imgcode"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_40" />
            </LinearLayout>

            <View style="@style/djk_line" />

            <Button
                android:id="@+id/apply"
                style="@style/btn"
                android:layout_marginTop="@dimen/dp_30"
                android:text="确认提交" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>