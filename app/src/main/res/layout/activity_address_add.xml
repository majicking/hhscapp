<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.fragment.mine.address.AddressAddActivity">

    <include layout="@layout/common_toolbar" />

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/match">

        <LinearLayout
            style="@style/match"
            android:orientation="vertical">

            <LinearLayout
                style="@style/bg_white_magin_left_top_right_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/djk_text"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="收件人姓名:" />

                <EditText
                    android:inputType="text"
                    android:maxLength="15"
                    android:id="@+id/name"
                    style="@style/layout_weight_h"
                    android:background="@mipmap/img_null"
                    android:gravity="center_vertical"
                    android:hint="请填写收件人信名"
                    android:paddingLeft="@dimen/dp_10"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_white_magin_left_top_right_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/djk_text"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="联系电话:" />

                <EditText
                    android:inputType="number"
                    android:maxLength="11"
                    android:id="@+id/phonenumber"
                    style="@style/layout_weight_h"
                    android:background="@mipmap/img_null"
                    android:gravity="center_vertical"
                    android:hint="请填写联系电话"
                    android:paddingLeft="@dimen/dp_10"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_white_magin_left_top_right_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/djk_text"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="地区选择:" />

                <TextView
                    android:id="@+id/area"
                    style="@style/layout_weight_h"
                    android:background="@mipmap/img_null"
                    android:gravity="center_vertical"
                    android:hint="点击选择地区"
                    android:paddingLeft="@dimen/dp_10"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_white_magin_left_top_right_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/dp_40"
                android:orientation="horizontal">

                <TextView
                    style="@style/djk_text"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="详细地址:" />

                <EditText
                    android:minHeight="@dimen/dp_40"
                    android:id="@+id/address"
                    android:layout_height="wrap_content"
                    style="@style/layout_weight_h"
                    android:background="@mipmap/img_null"
                    android:gravity="center_vertical"
                    android:hint="请输入详细地址"
                    android:paddingLeft="@dimen/dp_10"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                style="@style/bg_white_magin_left_top_right_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/djk_text"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="默认地址" />

                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/isdefault"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp" />
            </LinearLayout>

            <Button
                android:id="@+id/saveAddress"
                style="@style/btn"
                android:layout_margin="@dimen/dp_15"
                android:text="保存地址" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>