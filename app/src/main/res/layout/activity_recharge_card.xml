<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.fragment.mine.property.rechargecardbalance.RechargeCardActivity">

    <RelativeLayout
        style="@style/LLayout_48_h"
        android:background="@color/appColor"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_back_white" />

        <cn.carbs.android.segmentcontrolview.library.SegmentControlView
            android:id="@+id/rcb_view_menu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:scv_BackgroundNormalColor="@color/appColor"
            app:scv_BackgroundSelectedColor="@color/white"
            app:scv_FrameColor="@color/white"
            app:scv_FrameCornerRadius="6dp"
            app:scv_FrameWidth="1dip"
            app:scv_Gradient="true"
            app:scv_SegmentPaddingHorizontal="@dimen/dp_15"
            app:scv_SegmentPaddingVertical="5dp"
            app:scv_SelectedIndex="0"
            app:scv_TextArray="@array/rcblogtype"
            app:scv_TextNormalColor="@color/white"
            app:scv_TextSelectedColor="@color/appColor"
            app:scv_TextSize="@dimen/sp_12" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/appColor"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/icon_card_big" />

        <View style="@style/linearlayout_zw" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                style="@style/warp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text2"
                style="@style/warp"
                android:gravity="right"
                android:maxWidth="@dimen/dp_200"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_group"
        style="@style/layout_weight_v" />
</LinearLayout>