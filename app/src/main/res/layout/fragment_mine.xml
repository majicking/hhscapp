<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.fragment.mine.MineFragment">

    <RelativeLayout
        android:id="@+id/mine_banner_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:background="@color/background_color20">

        <LinearLayout
            android:id="@+id/mine_btnviewlogin"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/match_warp"
                android:layout_height="@dimen/dp_50">

                <ImageView
                    android:id="@+id/mine_userheadimg"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/djk_icon_member" />

                <TextView
                    android:id="@+id/mine_member_vip"
                    style="@style/warp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_3"
                    android:background="@drawable/shape_red"
                    android:text="v0"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:visibility="invisible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/mine_username"
                style="@style/warp"
                android:text="@string/clicklogin"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/mine_setting"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_margin="@dimen/dp_15"
            android:scaleType="fitXY"
            android:src="@mipmap/djk_icon_setting" />

        <ImageView
            android:id="@+id/mine_charting"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_15"
            android:src="@mipmap/djk_icon_mine_im" />

        <ImageView
            style="@style/match"
            android:scaleType="fitXY"
            android:src="@mipmap/member_top_bg" />

        <LinearLayout
            style="@style/LLayout_48_h"
            android:layout_alignParentBottom="true"
            android:background="@drawable/mine_banner_bg">

            <LinearLayout
                android:id="@+id/mine_btnview_goodscollect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/mine_icon_fav_goods" />

                <TextView
                    style="@style/warp"
                    android:text="商品收藏"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mine_btnview_storecollect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/mine_icon_fav_store" />

                <TextView
                    style="@style/warp"
                    android:text="店铺收藏"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mine_btnview_myhistory"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@mipmap/mine_icon_goods_browse" />

                <TextView
                    style="@style/warp"
                    android:text="我的足迹"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/djk_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
          style="@style/match"
            android:orientation="vertical">


            <LinearLayout
                style="@style/match_warp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/mine_btnview_order"
                    style="@style/LLayout_48_h">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/mc_01" />

                    <TextView
                        style="@style/warp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="我的订单" />

                    <LinearLayout
                        style="@style/LLayout_48_h"
                        android:gravity="right|center_vertical">

                        <TextView
                            style="@style/warp"
                            android:text="查看全部订单" />

                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:layout_marginRight="@dimen/dp_15"
                            android:src="@mipmap/more" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/djk_line"
                    android:layout_marginLeft="@dimen/dp_15" />


                <LinearLayout
                    style="@style/LLayout_50_h"
                    android:layout_height="@dimen/dp_55"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5">

                    <RelativeLayout
                        android:id="@+id/mine_btnview_order1"
                        style="@style/layout_weight_h"
                        android:padding="@dimen/dp_3">

                        <TextView
                            android:id="@+id/mine_order_num_1"
                            style="@style/mine_order_number"
                            android:visibility="invisible" />


                        <ImageView
                            android:id="@+id/mine_order1"
                            style="@style/mine_img"
                            android:src="@mipmap/nc_icon_mine_order_1" />

                        <TextView
                            style="@style/mine_text"
                            android:layout_below="@+id/mine_order1"
                            android:text="待付款" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mine_btnview_order2"
                        style="@style/layout_weight_h"
                        android:padding="@dimen/dp_3">

                        <TextView
                            android:text="1"
                            android:id="@+id/mine_order_num_2"
                            style="@style/mine_order_number"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/mine_order2"
                            style="@style/mine_img"
                            android:src="@mipmap/nc_icon_mine_order_2" />

                        <TextView
                            style="@style/mine_text"
                            android:layout_below="@+id/mine_order2"
                            android:text="待收货" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mine_btnview_order3"
                        style="@style/layout_weight_h"
                        android:padding="@dimen/dp_3">

                        <TextView
                            android:id="@+id/mine_order_num_3"
                            style="@style/mine_order_number"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/mine_order3"
                            style="@style/mine_img"
                            android:src="@mipmap/nc_icon_mine_order_3" />

                        <TextView
                            style="@style/mine_text"
                            android:layout_below="@id/mine_order3"
                            android:text="待自提" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mine_btnview_order4"
                        style="@style/layout_weight_h"
                        android:padding="@dimen/dp_3">

                        <TextView
                            android:id="@+id/mine_order_num_4"
                            style="@style/mine_order_number"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/mine_order4"
                            style="@style/mine_img"
                            android:layout_width="@dimen/dp_20"
                            android:src="@mipmap/nc_icon_mine_order_4" />

                        <TextView
                            style="@style/mine_text"
                            android:layout_below="@id/mine_order4"
                            android:text="待评价" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mine_btnview_order5"
                        style="@style/layout_weight_h"
                        android:padding="@dimen/dp_3">

                        <TextView
                            android:id="@+id/mine_order_num_5"
                            style="@style/mine_order_number"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/mine_order5"
                            style="@style/mine_img"
                            android:src="@mipmap/nc_icon_mine_order_5" />

                        <TextView
                            style="@style/mine_text"
                            android:layout_below="@id/mine_order5"
                            android:text="退款退货" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

            <View style="@style/djk_line" />

            <LinearLayout
                style="@style/match_warp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/mine_btnview_mymoney"
                    style="@style/LLayout_48_h">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/nc_icon_my_money" />

                    <TextView
                        style="@style/warp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="我的财产" />

                    <LinearLayout
                        style="@style/LLayout_48_h"
                        android:gravity="right|center_vertical">

                        <TextView
                            style="@style/warp"
                            android:text="查看全部财产" />

                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:layout_marginRight="@dimen/dp_15"
                            android:src="@mipmap/more" />
                    </LinearLayout>


                </LinearLayout>

                <View
                    style="@style/djk_line"
                    android:layout_marginLeft="@dimen/dp_15" />

                <LinearLayout
                    style="@style/LLayout_50_h"
                    android:layout_height="@dimen/dp_55"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5">

                    <RelativeLayout
                        android:id="@+id/mine_btnview_mymoney1"
                        style="@style/layout_weight_h"
                        android:padding="@dimen/dp_3">

                        <ImageView
                            android:id="@+id/mine_money_1"
                            style="@style/mine_img"
                            android:src="@mipmap/nc_icon_mine_money_1" />

                        <TextView
                            style="@style/mine_text"
                            android:layout_below="@+id/mine_money_1"
                            android:text="预存款" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mine_btnview_mymoney2"
                        style="@style/layout_weight_h"
                        android:padding="@dimen/dp_3">

                        <ImageView
                            android:id="@+id/mine_money_2"
                            style="@style/mine_img"
                            android:src="@mipmap/nc_icon_mine_money_2" />

                        <TextView
                            style="@style/mine_text"
                            android:layout_below="@+id/mine_money_2"
                            android:text="充值卡" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mine_btnview_mymoney3"
                        style="@style/layout_weight_h"
                        android:padding="@dimen/dp_3">

                        <ImageView
                            android:id="@+id/mine_money_3"
                            style="@style/mine_img"
                            android:src="@mipmap/nc_icon_mine_money_3" />

                        <TextView
                            style="@style/mine_text"
                            android:layout_below="@+id/mine_money_3"
                            android:text="代金卷" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mine_btnview_mymoney4"
                        style="@style/layout_weight_h"
                        android:padding="@dimen/dp_3">

                        <ImageView
                            android:id="@+id/mine_money_4"
                            style="@style/mine_img"
                            android:src="@mipmap/nc_icon_mine_money_4" />

                        <TextView
                            style="@style/mine_text"
                            android:layout_below="@+id/mine_money_4"
                            android:text="红包" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mine_btnview_mymoney5"
                        style="@style/layout_weight_h"
                        android:padding="@dimen/dp_3">

                        <ImageView
                            android:id="@+id/mine_money_5"
                            style="@style/mine_img"
                            android:src="@mipmap/nc_icon_mine_money_5" />

                        <TextView
                            style="@style/mine_text"
                            android:layout_below="@+id/mine_money_5"
                            android:text="积分" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <View style="@style/djk_line" />

            <LinearLayout
                style="@style/match_warp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/mine_btnview_distribution"
                    style="@style/LLayout_48_h">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/nc_icon_mine_order_1" />

                    <TextView
                        style="@style/warp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="分销中心" />

                    <LinearLayout
                        style="@style/LLayout_48_h"
                        android:gravity="right|center_vertical">

                        <TextView
                            style="@style/warp"
                            android:text="查看全部" />

                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:layout_marginRight="@dimen/dp_15"
                            android:src="@mipmap/more" />
                    </LinearLayout>


                </LinearLayout>

                <View
                    style="@style/djk_line"
                    android:layout_marginLeft="@dimen/dp_15" />

                <LinearLayout
                    style="@style/LLayout_55_h"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5">

                    <RelativeLayout
                        android:id="@+id/mine_btnview_distribution1"
                        style="@style/layout_weight_h"
                        android:padding="@dimen/dp_3">

                        <ImageView
                            android:id="@+id/mine_distribution_1"
                            style="@style/mine_img"
                            android:src="@mipmap/fenxiao_goods" />

                        <TextView
                            style="@style/mine_text"
                            android:layout_below="@+id/mine_distribution_1"
                            android:text="分销商品" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mine_btnview_distribution2"
                        style="@style/layout_weight_h"
                        android:padding="@dimen/dp_3">

                        <ImageView
                            android:id="@+id/mine_distribution_2"
                            style="@style/mine_img"
                            android:src="@mipmap/fenxiao_order" />

                        <TextView
                            style="@style/mine_text"
                            android:layout_below="@+id/mine_distribution_2"
                            android:text="分销订单" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mine_btnview_distribution3"
                        style="@style/layout_weight_h"
                        android:padding="@dimen/dp_3">

                        <ImageView
                            android:id="@+id/mine_distribution_3"
                            style="@style/mine_img"
                            android:src="@mipmap/fenxiao_jiesuan" />

                        <TextView
                            style="@style/mine_text"
                            android:layout_below="@+id/mine_distribution_3"
                            android:text="分销结算" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mine_btnview_distribution4"
                        style="@style/layout_weight_h"
                        android:padding="@dimen/dp_3">

                        <ImageView
                            android:id="@+id/mine_distribution_4"
                            style="@style/mine_img"
                            android:src="@mipmap/fenxiao_tiqu" />

                        <TextView
                            style="@style/mine_text"
                            android:layout_below="@+id/mine_distribution_4"
                            android:text="分销提现" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mine_btnview_distribution5"
                        style="@style/layout_weight_h"
                        android:padding="@dimen/dp_3">

                        <ImageView
                            android:id="@+id/mine_distribution_5"
                            style="@style/mine_img"
                            android:src="@mipmap/fenxiao_live" />

                        <TextView
                            style="@style/mine_text"
                            android:layout_below="@+id/mine_distribution_5"
                            android:text="在线直播" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/match_warp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/mine_btnview_address"
                    style="@style/LLayout_48_h">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/nc_icon_my_address" />

                    <TextView
                        style="@style/warp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="收货地址管理" />

                    <LinearLayout
                        style="@style/LLayout_48_h"
                        android:gravity="right|center_vertical">


                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:layout_marginRight="@dimen/dp_15"
                            android:src="@mipmap/more" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/djk_line"
                    android:layout_marginLeft="@dimen/dp_15" />

                <LinearLayout
                    android:id="@+id/mine_btnview_setting"
                    style="@style/LLayout_48_h">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/nc_icon_setting2" />

                    <TextView
                        style="@style/warp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="用户设置" />

                    <LinearLayout
                        style="@style/LLayout_48_h"
                        android:gravity="right|center_vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:layout_marginRight="@dimen/dp_15"
                            android:src="@mipmap/more" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/djk_line"
                    android:layout_marginLeft="@dimen/dp_15" />

                <LinearLayout
                    android:id="@+id/mine_btnview_twocode"
                    style="@style/LLayout_48_h">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/twocode" />

                    <TextView
                        style="@style/warp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="我的二维码" />

                    <LinearLayout
                        style="@style/LLayout_48_h"
                        android:gravity="right|center_vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:layout_marginRight="@dimen/dp_15"
                            android:src="@mipmap/more" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>